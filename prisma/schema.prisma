datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Property {
  id                   String   @id @default(uuid())
  image                String
  image1               String?
  image2               String?
  image3               String?
  image4               String?
  propertyCategory     String
  propertyName         String
  propertyType         String
  propertyRoomsNumber  String?
  propertyPrice        Int
  propertyArea         String
  propertyCity         String
  propertyTown         String
  contactPhoneNumber   String
  description          String
  lng                  Float?
  lat                  Float?
  link                 String?   @default("")
  hearts               Int       @default(0)
  userName             String
  userImage            String
  createdBy            String
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  // إضافة الفهارس لتحسين البحث
  @@index([propertyCategory])
  @@index([propertyType])
  @@index([propertyRoomsNumber])
  @@index([propertyPrice])
  @@index([propertyCity])
  @@index([propertyTown])
}

model Car {
  id                 String   @id @default(uuid()) // معرف فريد باستخدام UUID
  userName          String?   // اسم المستخدم
  userEmail         String?   // البريد الإلكتروني للمستخدم
  userImage         String?   // صورة المستخدم

  carBrand         String?   // ماركة السيارة
  carModel         String?   // موديل السيارة
  year             Int?      // سنة الصنع
  price            Float?    // السعر

  image1           String?   // صورة 1
  image2           String?   // صورة 2
  image3           String?   // صورة 3
  image4           String?   // صورة 4
  image5           String?   // صورة 5

  forSell          Boolean   @default(false) // متاح للبيع؟
  forRent          Boolean   @default(false) // متاح للإيجار؟
  forRentDaily     Boolean   @default(false) // متاح للإيجار اليومي؟
  forRentMonthly   Boolean   @default(false) // متاح للإيجار الشهري؟

  city             String?   // المدينة
  town             String?   // المنطقة/الحي
  licensePlateNumber String? // رقم اللوحة

  new              Boolean   @default(false) // جديدة؟
  used             Boolean   @default(false) // مستعملة؟
  distance         Float?    // عدد الكيلومترات المقطوعة

  phoneNumber      String?   // رقم الهاتف

  createdAt        DateTime  @default(now()) // تاريخ الإنشاء
  updatedAt        DateTime  @updatedAt      // تاريخ آخر تحديث
}
